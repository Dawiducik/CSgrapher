<Window x:Class="CSgrapher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSgrapher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="18" />
            <RowDefinition Height="1*" MinHeight="416.04" />
        </Grid.RowDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New Random" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <MenuItem Header="_DogUp" Click="MenuItem_Click" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid Grid.Column="0" Grid.Row="1" Background="#FFF0F0F0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="25.002"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Połączenia" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Height="28" Width="76"/>
            <DataGrid BorderBrush="{x:Null}"  Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nr wierzchołka" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Canvas Name="MainCanvas" Grid.Column="1" Grid.Row="1" Background="White" MouseDown="MainCanvas_MouseDown" Margin="30,30,30,30">

        </Canvas>
    </Grid>
</Window>
